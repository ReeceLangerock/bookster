<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <title>Bookster</title>
    <link rel="stylesheet" type="text/css" href="../style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

</head>
<html>


<body>
    <div class='container'>
        <!--import navbar -->
        <% if (authenticatedUser) { %>
        <%- include ./partials/authNavigation.ejs %>
        <%  } else { %>
        <%- include ./partials/navigation.ejs %>
        <%  } %>
        <main>

          <div class = "formContainer">
            <h1>Settings</h1>
            <form method = "POST" action = '/user/settings'>
            <h4>First name:</h4>
            <input type="text" name="firstName" value="<%=userData.firstName %>"><br>
            <h4>Last name:</h4>
            <input type="text" name="lastName" value="<%=userData.lastName %>"><br>
            <h4>City:</h4>
            <input type="text" name="city" value="<%=userData.City %>"><br>
            <h4>State:</h4>
            <input type="text" name="state" value="<%=userData.State %>"><br>
            <input type="submit" value="Save Changes">

          </form>
        </div>

              <!-- for Req.flash -->
              <% if(error && error.length > 0){ %>
                <div class = "flashPage" id = "flashPageID">
            <div class = "ui">
              <p><%= error %></p>
            </div>
          </div>
            <% } %>
            <% if(success && success.length > 0){ %>
              <div class = "flashPage" id = "flashPageID">
              <div class = "ui">
                <p><%= success[0] %></p><br>
                <p><%= success[1] %></p>
              </div>
            </div>
            <% } %>

        </main>
    </div>
</body>
<!--import footer -->
<%- include ./partials/footer.ejs %>
<script>
    document.onclick = function(event) {
        if (document.getElementById('flashPageID')) {
            document.getElementById('flashPageID').style.display = "none";
        }
    }
</script>

</html>
